# Production Environment Variables
# Copy this file to .env.prod and fill in the values

# Database Configuration
POSTGRES_DB=kraftlog
POSTGRES_USER=kraftlog
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
ADMIN_EMAIL=admin@yourdomain.com

# JWT Configuration
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_32_CHAR_STRING
JWT_EXPIRATION=86400000

# SMTP Mail Configuration
# Required for password recovery feature
# For Gmail, use App Password instead of regular password
# For other providers, adjust host and port accordingly
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Frontend URL
# Used to generate password reset links in emails
FRONTEND_URL=https://yourdomain.com

# Logging
LOG_LEVEL=INFO
APP_LOG_LEVEL=INFO
